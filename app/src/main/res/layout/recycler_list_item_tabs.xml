<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhiteLittle"
    app:cardCornerRadius="@dimen/dp_2"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_tabs_list_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@mipmap/ic_thumb_bg" />

        <TextView
            android:id="@+id/tv_tabs_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="2016-12-12"
            android:textColor="#BDBDBD"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_tabs_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tabs_list_time"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@string/my_name"
            android:textColor="#424242"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_tabs_list_pic"
            android:layout_marginLeft="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tabs_list_reader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读(212)"
                android:textColor="#BDBDBD"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_tabs_list_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="赞(121)"
                android:textColor="#BDBDBD"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>